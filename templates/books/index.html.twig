{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Lista de libros</h1>

    <div class="form-group">
        <a class="btn btn-success" href="{{ path('books_create') }}">
            <i class="fa fa-plus"></i> Create new
        </a>
    </div>

    <table class="table table-bordered table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Autor</th>
                <th>Fecha de creación</th>
                <th width="10%">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.description }}</td>
                <td>{{ book.price }}</td>
                <td>{{ book.authorId }}</td>
                <td>{{ book.createdAt ? book.createdAt|date('d/m/Y') : '' }}</td>
                <td>
                    <a class="btn btn-default btn-sm" href="{{ path('books_show', {'id': book.id}) }}">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a class="btn btn-primary btn-sm" href="{{ path('books_edit', {'id': book.id}) }}">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
